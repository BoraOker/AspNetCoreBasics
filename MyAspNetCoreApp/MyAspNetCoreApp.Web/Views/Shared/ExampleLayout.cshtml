<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - www.mysite.com</title>
</head>
<body>
    <header>
        header
        @await RenderSectionAsync("Header", required: false)        <!-- required true yapılırsa Header RenderSection'ı her sayfada tanımlanmak zorundadır.' -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer >
        <div>footer</div>
        @await RenderSectionAsync("Footer", required: false)
    </footer>
</body>
</html>
